{
  "manifest_version": 3,
  "version": "24.10.02.16",
  "minimum_chrome_version": "107",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDesc__",
  "default_locale": "ru",
  "author": "Igor Lebedev",
  "permissions": [
      "storage",
	  "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
	    "*://*.ozon.com/*",
 		"*://*.ozon.ru/*",
 		"*://*.wildberries.ru/*",
		"*://*.sima-land.com/*",
 		"*://*.sima-land.ru/*"	
     ],
	"js": [
		"./content/content.js"
		],
	"run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "./images/icon_color-16.png",
      "48": "./images/icon_color-48.png",
	  "96": "./images/logo_color.svg",
      "128": "./images/icon_color-128.png"
    },
	"js": [
		"./popup/popup.js"
		],
	"css": [
		"./popup/popup.css"
		],
    "default_title": "__MSG_extensionDefaultTitle__"
  },
  "icons": {
    "16": "./images/icon_color-16.png",
    "48": "./images/icon_color-48.png",
	"96": "./images/logo_color.svg",	
    "128": "./images/icon_color-128.png"
  },
	"browser_specific_settings": {
	  "gecko": {
		"id": "ozon-wildberries-simaland-customizer@firefox.com",
		"strict_min_version": "121.0"
	  }
	}  
}