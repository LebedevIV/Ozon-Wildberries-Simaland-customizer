{
  "manifest_version": 2,
  "version": "24.5.23.0",
  "name" : "__MSG_extensionName__",
  "description" : "__MSG_extensionDesc__",
  "default_locale" : "ru",
  "author": "Igor Lebedev",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ozon.ru/*",
        "*://*.wildberries.ru/*",
        "*://*.sima-land.ru/*"
      ],
      "js": ["./content/content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "./images/icon_color-16.png",
      "48": "./images/icon_color-48.png",
      "96": "./images/icon_color-96.png",
      "128": "./images/icon_color-128.png"
    },
    "default_title": "__MSG_extensionDefaultTitle__"
  },
  "icons": {
    "16": "./images/icon_color-16.png",
    "48": "./images/icon_color-48.png",
    "96": "./images/logo_color.svg",
    "128": "./images/icon_color-128.png"
  },
  "applications": {
    "gecko": {
      "id": "your-addon@mozilla.org",
      "strict_min_version": "120"
    }
  }
}