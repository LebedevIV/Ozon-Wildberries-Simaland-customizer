{
  "manifest_version": 3,
  "version": "25.1.22.2",
  "minimum_chrome_version": "107",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDesc__",
  "default_locale": "ru",
  "author": "Igor Lebedev",
  "permissions": [
      "storage",
	  "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
	    "*://*.ozon.com/*",
 		"*://*.ozon.ru/*",
 		"*://*.ozon.by/*",	      
 		"*://*.wildberries.ru/*",
 		"*://*.global.wildberries.ru/*",	      
		"*://*.sima-land.com/*",
 		"*://*.sima-land.ru/*"
	      ,"*://*.market.yandex.ru/*"
	      ,"*://*.market.yandex.com/*"
     ],
	"js": [
		"./content/content.js"
		],
	"run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "./images/icon_color-16.png",
      "48": "./images/icon_color-48.png",
      "128": "./images/icon_color-128.png"
    },
	"js": [
		"./popup/popup.js"
		],
	"css": [
		"./popup/popup.css"
		],
    "default_title": "__MSG_extensionDefaultTitle__"
  },
  "icons": {
    "16": "./images/icon_color-16.png",
    "48": "./images/icon_color-48.png",
    "128": "./images/icon_color-128.png"
  }
}
